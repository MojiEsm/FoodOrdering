<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:outlineSpotShadowColor="@color/Primary"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layoutDirection="rtl"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_itemOrder"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/splash3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_itemOrder_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/iransans"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="نام"
                android:textColor="#252525"
                android:textDirection="rtl"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txt_itemOrder_Category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/iransans"
                android:maxLines="1"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="لیست"
                android:textColor="#636363"
                android:textDirection="rtl"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_itemOrder_Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/irsansfanum"
                android:maxLines="1"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:text="39000"
                android:textColor="@color/textColor"
                android:textDirection="rtl"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left|center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_itemOrder_Plus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_button_oval"
                    android:src="@drawable/ic_baseline_add_white_24" />

                <TextView
                    android:id="@+id/txt_itemOrder_Number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/irsansfanum"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="5"
                    android:textColor="@color/textColor"
                    android:textSize="18dp" />

                <ImageButton
                    android:id="@+id/btn_itemOrder_Minus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_button_oval"
                    android:src="@drawable/minus" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>