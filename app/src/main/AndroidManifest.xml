<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foodordering">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/foodlogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/foodlogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodOrdering">
        <activity
            android:name=".activities.OrdersActivity"
            android:parentActivityName=".activities.MainActivity"
            android:exported="false" />
        <activity
            android:name=".activities.AddOrder"
            android:exported="false" />
        <activity
            android:name=".activities.AddCategoryActivity"
            android:exported="false" />
        <activity
            android:name=".activities.AddProductActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ProductsActivity"
            android:exported="false"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.CategoryActivity"
            android:exported="false"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.AddCustomerActivity"
            android:exported="false" />
        <activity
            android:name=".activities.CustomersActivity"
            android:exported="false"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.Login_Activity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:exported="true" />
    </application>

</manifest>